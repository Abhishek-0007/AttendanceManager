<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.attendancemanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FacultyDashboard"></activity>
        <activity android:name=".MainDashboard" />
        <activity android:name=".FacultyViewAttendance" />
        <activity android:name=".ViewAttendance" />
        <activity android:name=".DecidingActivity" />
        <activity android:name=".StudentMarkAttendance" />
        <activity android:name=".StudentViewAttendance" />
        <activity android:name=".login" />
        <activity android:name=".Register" />
        <activity android:name=".FacultyLoginScreen" />
        <activity android:name=".FacultyForAttendance" />
        <activity android:name=".AvatarPage" />
        <activity android:name=".AttendanceStatusView" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>